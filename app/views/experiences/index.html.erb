<div>
  <div>
    <h1 class="text-center">
      Build a career profile
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new career profile
    </h2>

    <form action="/insert_experience" method="post">
      <div>
        <label for="resume_id_box">
          Resume
        </label>

        <input type="text" id="resume_id_box" name="query_resume_id">
      </div>

      <div>
        <label for="job_id_box">
          Job
        </label>

        <input type="text" id="job_id_box" name="query_job_id">
      </div>

      

      <div>
        <label for="display_order_box">
          Display order
        </label>

        <input type="text" id="display_order_box" name="query_display_order">
      </div>

      <button>
        Create experience
      </button>
    </form>
  </div>
</div>

<hr>
<div class="container">
    <%= rails_db_data_table 'jobs', footer: false, 
          columns:['id', 'title', 'description', 'skills'],
          header: true,
          limit: 20,
          order_by: :title,
          order: :asc
    %>
</div>

<hr>
