<div>
  <div>
    <h1>
      List of all employers
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new employer
    </h2>

    <form action="/insert_employer" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location">
      </div>

      <div>
        <label for="jobs_count_box">
          Jobs count
        </label>

        <input type="text" id="jobs_count_box" name="query_jobs_count">
      </div>

      <button>
        Create employer
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Location
        </th>

        <th>
          Jobs count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_employers.each do |an_employer| %>
      <tr>
        <td>
          <%= an_employer.id %>
        </td>

        <td>
          <%= an_employer.name %>
        </td>

        <td>
          <%= an_employer.location %>
        </td>

        <td>
          <%= an_employer.jobs_count %>
        </td>

        <td>
          <%= time_ago_in_words(an_employer.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_employer.updated_at) %> ago
        </td>

        <td>
          <a href="/employers/<%= an_employer.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
